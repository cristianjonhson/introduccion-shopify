<!-- Sección del encabezado -->
<header class="site-header">
  <div class="container">
    <div class="header-wrapper">
      <!-- Logo de la tienda -->
      <div class="logo">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}">
        {% else %}
          <h1>{{ shop.name }}</h1>
        {% endif %}
      </div>

      <!-- Menú de navegación -->
      <nav class="main-nav">
        <ul>
          {% for link in linklists.main-menu.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <!-- Carrito -->
      <div class="cart-link">
        <a href="/cart">
          Carrito ({{ cart.item_count }})
        </a>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Encabezado",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
